<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/nyToolbarHelp3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/greenBack"
        android:minHeight="?attr/actionBarSize" />

    <TextView
        android:id="@+id/nyTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nyToolbarHelp3"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="30dp"
        android:layout_weight="1"
        android:minHeight="50dp"
        android:textSize="30sp"
        android:layout_centerVertical="true"
        android:text="@string/MySavedArticles"
         />

    <ListView
        android:id="@+id/listViewSaved"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nyTitle"
        android:layout_weight="1"
        android:stackFromBottom="false"
        android:transcriptMode="alwaysScroll"
        android:layout_above="@id/nytBack"


        />

    <Button
        android:id="@+id/nytBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_weight="1"
        android:text="@string/nyBack"/>


</RelativeLayout>