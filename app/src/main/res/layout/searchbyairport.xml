<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/flightStatusWelcomeTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please select Arrivals or Departures"
        android:layout_centerHorizontal="true" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/flightStatusWelcomeTxt"
        android:columnCount="2"
        android:rowCount="1">

        <ImageButton
            android:id="@+id/arrivalsImgBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrivals"
            android:layout_columnWeight="1"/>

        <ImageButton
            android:id="@+id/departuresImgbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/departures"
            android:layout_columnWeight="1" />

    </GridLayout>


</RelativeLayout>
